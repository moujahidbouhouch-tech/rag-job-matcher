# Optional: sudo password for service restarts (leave blank if unused)
SUDO_ADMIN_PW=

# PostgreSQL (RAG) - host/port used by the app and docker-compose
POSTGRES_HOST_RAG=localhost
POSTGRES_PORT_RAG=5433
POSTGRES_DB_RAG=rag
POSTGRES_USER_RAG=rag
POSTGRES_PASSWORD_RAG=changeme

# PostgreSQL (n8n)
POSTGRES_USER_N8N=n8n
POSTGRES_PASSWORD_N8N=changeme
POSTGRES_DB_N8N=n8n
POSTGRES_PORT_N8N=5432

# n8n connection (matches docker-compose defaults)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5433
DB_POSTGRESDB_DATABASE=${POSTGRES_DB_RAG}
DB_POSTGRESDB_USER=${POSTGRES_USER_RAG}
DB_POSTGRESDB_PASSWORD=${POSTGRES_PASSWORD_RAG}
PGPASSWORD=${POSTGRES_PASSWORD_RAG}

# Test database (do not point at prod)
TEST_DB_HOST=127.0.0.1
TEST_DB_PORT=5433
TEST_DB_NAME=rag_test_db
TEST_DB_USER=rag
TEST_DB_PASSWORD=changeme

# Ollama
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=qwen2.5:7b-instruct-q4_k_m
OLLAMA_FALLBACK_MODEL=llama3.1:8b
OLLAMA_MODELS="qwen2.5:7b-instruct-q4_k_m qwen2.5:1.5b-instruct llama3.1:8b"
OLLAMA_TIMEOUT=1200
# Optional health overrides
# OLLAMA_HEALTHCHECK_PATH=/api/tags
# OLLAMA_HEALTH_TIMEOUT_SECONDS=5

# GUI / chunking
USE_STRUCTURED_CHUNKER=1
STRUCTURED_USE_LLM=0
CHUNK_ASSIST_MODEL_ID=qwen2.5:1.5b-instruct

# n8n security (set real secrets in your own .env)
N8N_ENCRYPTION_KEY=changeme
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# n8n server
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
GENERIC_TIMEZONE=Europe/Berlin
